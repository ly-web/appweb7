{
    "name": "esp",
    "description": "Embedthis ESP, the amazingly fast C-Language web framework",
    "title": "Embedthis ESP",
    "version": "5.0.0",
    "keywords": [
        "esp",
        "package"
    ],
    "homepage": "http://embedthis.com/esp",
    "author": {
        "name": "Embedthis Software",
        "email": "dev@embedthis.com",
        "url": "http://embedthis.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/embedthis/esp.git"
    },
    "bugs": {
        "url": "http://github.com/embedthis/esp/issues"
    },
    "dependencies": {
        "osdep": "*",
        "http": "*",
        "mpr": "*",
        "pcre": "*",
    },
    "optionalDependencies": {
        "angular": "~1.2",
        "esp-angular": "*",
        "esp-angular-mvc": "*",
        "esp-html-mvc": "*",
        "esp-legacy-mvc": "*",
        "esp-server": "*",
        "est": "*",
        "sqlite": "*",
    },
    "devDependencies": {
        "appweb": "*",
        "makeme": ">0.8.4"
    },
    "dirs": {
        "paks": "src/paks",
        "client": "client"
    },
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        },
        {
            "type": "Commercial",
            "url": "http://embedthis.com/licensing/"
        }
    ],
    "esp": {
        "serverPrefix": "/do",
        "combined": false,
        "update": true,
        "server": {
            "generate": {
                "appweb": "esp-server/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "files": [
                    "esp-server/src/app.c"
                ],
                "clientModel": "esp-angular-mvc/model.js",
                "clientController": "esp-angular-mvc/controller.js",
                "clientList": "esp-legacy-mvc/list.esp",
                "clientEdit": "esp-legacy-mvc/edit.esp"
            }
        },
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2
        },
        "json": true,
        "auth": "app"
    },
    "client-scripts": [
        "paks/angular/angular.js",
        "paks/angular/angular-animate.js",
        "paks/angular/angular-route.js",
        "src/paks/esp-angular/*.js",
        "app/main.js",
        "app/*/**.js*"
    ]
}
