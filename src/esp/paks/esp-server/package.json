{
    "name": "esp-server",
    "description": "ESP Server Framework",
    "version": "4.5.0-rc.1",
    "precious": true,
    "dirs": {
        "client": "client",
        "paks": "client/paks"
    },
    "export": [
        "templates/**"
    ],
    "esp": {
        "flat": false,
        "serverPrefix": "/do",
        "server": {
            "generate": {
                "appweb": "esp-server/appweb.conf",
                "migration": "esp-server/migration.c",
                "controller": "esp-server/controller.c",
                "controller-singleton": "esp-server/controller.c",
                "files": [
                    "esp-server/src/app.c"
                ]
            }
        }
    }
}
