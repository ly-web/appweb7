/*
    start.bit - Bit file for the simple-esp sample
 */

Bit.load({
    settings: {
        requires: ['appweb'],
        bit: '0.8.6',
    },
    targets: {
        sample: {
            build: "run('esp compile')",
        },
        cleanup: {
            type: 'clean',
            action: "
                run('esp clean')
                rm('*.o', 'cache/*')
            ",
        },
        run: {
            run: 'esp run',
        },
    },
    packDefaults: { appweb: true },
})
